<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_btn_bg1"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="150px">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13px"
            android:layout_marginTop="20px"
            android:background="@drawable/empty_photo" />

        <TextView

            android:id="@+id/mem_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@id/img"
            android:text="春天在哪里"
            android:textColor="#3e382a"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/mem_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40px"
            android:layout_marginTop="20px"
            android:text="18/01/01 14:09"
            android:textColor="#7c7971" />

        <TextView
            android:id="@+id/mem_list_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mem_list_date"
            android:layout_marginLeft="10px"
            android:layout_marginTop="25px"
            android:layout_toRightOf="@id/img"
            android:text="烟台"
            android:textColor="#3e382a"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/mem_list_super"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mem_list_date"
            android:layout_marginEnd="40px"
            android:layout_marginLeft="10px"
            android:layout_marginTop="25px"
            android:layout_toRightOf="@id/mem_list_city"
            android:text="超级会员"
            android:textColor="#7c7971" />

        <TextView
            android:id="@+id/men_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mem_list_date"
            android:layout_marginTop="25px"

            android:layout_toRightOf="@id/mem_list_super"

            android:text="99元30次"
            android:textColor="#7c7971" />
    </RelativeLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/city_line" />

</LinearLayout>
