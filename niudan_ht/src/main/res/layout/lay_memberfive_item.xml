<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_btn_bg1"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/member_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商户数据"
        android:padding="12dp"
        android:textColor="#2d2d1e"
        android:layout_marginTop="10dp"
        android:textSize="40px"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="10"
        android:gravity="center_horizontal|top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_1"
                android:layout_width="0dp"

                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#F8FFFE"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/member_9"
                    android:textColor="@color/black_little"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cus_number1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="0" />
            </LinearLayout>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="@color/gray_little3" />

            <LinearLayout
                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#F8FFFE"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/member_10"
                    android:textColor="@color/black_little"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cus_number2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="0" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/city_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">


        </LinearLayout>

        <ImageView
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#FFFFFF" />


    </LinearLayout>


</LinearLayout>

