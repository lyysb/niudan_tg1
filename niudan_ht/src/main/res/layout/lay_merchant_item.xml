<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="20"
        android:background="@color/background_main"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/merchant_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="武汉遍历店"
                android:textColor="@color/black_little"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/merchant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_toRightOf="@id/merchant_shop"

                android:text="王小贱"
                android:textColor="@color/black_little"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/merchant_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_toRightOf="@id/merchant_name"
                android:text="12345678901"
                android:textColor="@color/black_little"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text1"
                android:textColor="@color/black_little"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99元30次会员" />

            <TextView
                android:id="@+id/text2"
                android:textColor="@color/black_little"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150px"
                android:layout_toRightOf="@id/text1"

                android:text="null位" />

            <TextView
                android:id="@+id/text3"
                android:textColor="@color/black_little"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="null位" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_little"
                android:text="150元50次会员" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="135px"
                android:textColor="@color/black_little"
                android:layout_toRightOf="@id/text4"

                android:text="null位" />

            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black_little"
                android:text="null位" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_little"
                android:text="累计提成款" />

            <TextView
                android:id="@+id/text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190px"
                android:textColor="@color/black_little"
                android:layout_toRightOf="@id/text7"
                android:text="null位"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text9"
                android:layout_width="wrap_content"
                android:textColor="@color/black_little"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="null位" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_little"
                android:text="累计支付提成款" />

            <TextView
                android:id="@+id/text11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150px"
                android:layout_toRightOf="@id/text10"
                android:text="null位"
                android:textColor="@color/black_little"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text12"
                android:textColor="@color/black_little"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="null位" />

        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@drawable/city_line" />


</LinearLayout>
