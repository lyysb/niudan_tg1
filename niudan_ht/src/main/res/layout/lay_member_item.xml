<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_btn_bg1"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2日超级会员数量"
            android:layout_marginTop="10dp"
            android:textSize="40px"
            android:textStyle="bold"
            android:textColor="#2d2d1e"
            />

        <RelativeLayout

            android:layout_width="150px"
            android:layout_height="60px"
            android:layout_marginRight="20px">

            <Button
                android:id="@+id/member_list"
                android:layout_width="300px"
                android:layout_marginTop="10px"
                android:layout_height="60px"
                android:background="@drawable/mem_select"
                />
        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/online_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7e7d76"
            android:textSize="30px"
            android:layout_marginLeft="150px"
            android:layout_marginTop="30px"
            android:text="今日" />

        <TextView
            android:id="@+id/online_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7e7d76"
            android:textSize="30px"
            android:layout_marginLeft="250px"
            android:layout_toRightOf="@id/online_text1"
            android:layout_marginTop="30px"
            android:text="昨日" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="50px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/online_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2d2d1e"
            android:textSize="40px"
            android:layout_marginLeft="150px"
            android:layout_marginTop="20px"
            android:text="100" />

        <TextView
            android:id="@+id/online_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2d2d1e"
            android:textSize="40px"
            android:layout_marginLeft="300px"
            android:layout_toRightOf="@id/online_text3"
            android:layout_marginTop="20px"
            android:text="100" />


    </RelativeLayout>
</LinearLayout>


